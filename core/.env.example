# Lightning Core Environment Configuration
# Copy this to .env and fill in your actual values

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# OpenAI - For GPT-4o, GPT-4, O1, O3 models
# Choose one format:
OPENAI_API_KEY=sk-proj-...
# or
LIGHTNING_API_KEY_OPENAI=sk-proj-...

# OpenRouter - For Claude, Gemini, Llama, and many other models
# Get your key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-...
# or
LIGHTNING_API_KEY_OPENROUTER=sk-or-v1-...

# Anthropic - For direct Claude access (optional if using OpenRouter)
ANTHROPIC_API_KEY=sk-ant-...
# or
LIGHTNING_API_KEY_ANTHROPIC=sk-ant-...

# =============================================================================
# Key Management Configuration
# =============================================================================

# Secret storage provider (default: environment)
# Options: environment, local, azure_keyvault, aws_secrets
LIGHTNING_SECRET_PROVIDER=environment

# =============================================================================
# Lightning Core API Configuration
# =============================================================================

# API URLs for agents
LIGHTNING_API_URL=http://localhost:8000
LIGHTNING_REALTIME_URL=ws://localhost:8001/realtime

# =============================================================================
# Azure Configuration (if using Azure providers)
# =============================================================================

# Cosmos DB
COSMOS_CONNECTION_STRING=
COSMOS_DATABASE=lightning
COSMOS_CONTAINER=documents

# Service Bus
SERVICE_BUS_CONNECTION_STRING=
SERVICE_BUS_NAMESPACE=

# Storage
STORAGE_CONNECTION_STRING=
STORAGE_CONTAINER=lightning-storage

# =============================================================================
# Other Service Integrations
# =============================================================================

# Context Hub
CONTEXT_HUB_URL=http://localhost:3000

# Email Services
GMAIL_OAUTH_TOKEN=
OUTLOOK_OAUTH_TOKEN=
ICLOUD_USERNAME=
ICLOUD_APP_PASSWORD=

# Communication Services
SLACK_BOT_TOKEN=
TEAMS_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# =============================================================================
# Development Settings
# =============================================================================

# Logging
LOG_LEVEL=INFO

# Debug mode
DEBUG=false

# Model defaults
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_PLANNER_MODEL=o3-mini

# =============================================================================
# Voice Agent Configuration
# =============================================================================

# Twilio (for voice agent)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Voice settings
DEFAULT_VOICE=ash
DEFAULT_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17