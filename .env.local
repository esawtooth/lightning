# Local Development Environment Configuration
# This file configures Lightning Core for local development

# Lightning Core Mode
LIGHTNING_MODE=local

# Provider Configuration
LIGHTNING_STORAGE_PROVIDER=local
LIGHTNING_EVENT_BUS_PROVIDER=redis
LIGHTNING_CONTAINER_RUNTIME=docker
LIGHTNING_SERVERLESS_PROVIDER=local

# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://lightning:lightning123@postgres:5432/lightning_db

# Event Bus Configuration (Redis)
REDIS_URL=redis://redis:6379
LIGHTNING_EVENT_BUS_CONNECTION=redis://redis:6379

# Context Hub
CONTEXT_HUB_URL=http://context-hub:3000

# Storage
LIGHTNING_STORAGE_PATH=/app/data

# Authentication (Simplified for local)
JWT_SECRET=local-development-secret-key-change-in-production
AUTH_ENABLED=false

# API Configuration
API_BASE=http://lightning-api:8000
EVENT_API_URL=http://lightning-api:8000/api/events

# Logging
LOG_LEVEL=INFO
UVICORN_LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Development Features
RELOAD=true
DEBUG=true

# OpenAI (Required)
# OPENAI_API_KEY=sk-your-key-here

# Optional: RabbitMQ (alternative message queue)
RABBITMQ_URL=amqp://lightning:lightning123@rabbitmq:5672

# UI Configuration
APP_HOST=0.0.0.0
APP_PORT=8080

# Service Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
RABBITMQ_PORT=5672
CONTEXT_HUB_PORT=3000
API_PORT=8000
UI_PORT=8080