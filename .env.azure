# Azure Cloud Environment Configuration
# This file configures Lightning Core for Azure deployment

# Lightning Core Mode
LIGHTNING_MODE=azure

# Provider Configuration
LIGHTNING_STORAGE_PROVIDER=cosmos
LIGHTNING_EVENT_BUS_PROVIDER=servicebus
LIGHTNING_CONTAINER_RUNTIME=azure
LIGHTNING_SERVERLESS_PROVIDER=azure

# Azure Storage Configuration
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# Cosmos DB Configuration
# COSMOS_CONNECTION_STRING=AccountEndpoint=https://yourcosmosdb.documents.azure.com:443/;AccountKey=yourkey

# Service Bus Configuration
# SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://yourservicebus.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=yourkey

# Context Hub (Azure Container Instance)
CONTEXT_HUB_URL=https://hub.yourdomain.com

# Authentication (Azure AD)
# AAD_CLIENT_ID=your-aad-client-id
# AAD_CLIENT_SECRET=your-aad-client-secret
# AAD_TENANT_ID=your-aad-tenant-id
AUTH_ENABLED=true

# Key Vault (for secrets)
# AZURE_KEY_VAULT_URL=https://yourvault.vault.azure.net/

# API Configuration (Azure Function or Container Instance)
API_BASE=https://api.yourdomain.com
EVENT_API_URL=https://api.yourdomain.com/api/events

# Logging & Monitoring
LOG_LEVEL=INFO
UVICORN_LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Azure Application Insights
# APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://centralindia-0.in.applicationinsights.azure.com/

# Production Settings
RELOAD=false
DEBUG=false

# OpenAI (Required)
# OPENAI_API_KEY=sk-your-key-here

# Azure Function Configuration
AZURE_FUNCTIONS_ENVIRONMENT=production
AZURE_DEPLOYMENT_TYPE=container

# Container Instance Configuration
PORT=8000
HOST=0.0.0.0

# Front Door & CDN
DOMAIN=yourdomain.com
CDN_ENDPOINT=https://yourcdn.azureedge.net

# Communication Services (Email)
# COMMUNICATION_SERVICE_CONNECTION_STRING=endpoint=https://yourcommunication.communication.azure.com/;accesskey=yourkey

# Twilio (Voice services)
# TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token

# Azure Container Registry
ACR_LOGIN_SERVER=youracr.azurecr.io

# Network & Security
AZURE_SUBNET_ID=/subscriptions/your-subscription/resourceGroups/your-rg/providers/Microsoft.Network/virtualNetworks/your-vnet/subnets/your-subnet

# Health Check URLs
HEALTH_CHECK_PATH=/health
READINESS_PROBE_PATH=/ready

# Scaling Configuration
CPU_CORES=1.0
MEMORY_GB=1.5
MIN_REPLICAS=1
MAX_REPLICAS=10